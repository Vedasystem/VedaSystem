@model VedaSystem.Application.ViewModels.TransmissaoViewModel
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <base href="../" />
    <title>Transmissão - Veda Admin</title>
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/nouislider/distribute/nouislider.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/ion-rangeslider/css/ion.rangeSlider.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/tiny-date-picker/tiny-date-picker.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/tiny-date-picker/date-range-picker.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/node_modules/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/dist/css/ace-font.css">
    <link rel="stylesheet" type="text/css" href="~/lib/ace-v3.1.1/dist/css/ace.css">
    <link rel="icon" type="image/png" href="~/lib/ace-v3.1.1/assets/favicon.png" />
</head>
<body>
   
    <di1v class="page-content container container-plus">
        <div class="card acard mt-2 mt-lg-3">
            <div class="card-header">
                <h3 class="card-title text-125 text-primary-d2">
                    <i class="far fa-edit text-dark-l3 mr-1"></i>
                    Editar Transmissão
                </h3>
            </div>
            <div class="card-body px-3 pb-1">
                @Html.HiddenFor(t => t.TerapeutaId, new { id = "id_terapeuta" })
                @Html.HiddenFor(t => t.Id, new { id = "id_transmissao" })
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="Titulo" for="tran-titulo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Titulo" class="form-control col-sm-8 col-md-6" id="tran-titulo" />
                        <span asp-validation-for="Titulo" class="text-danger" id="tran-titulo-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="SubTitulo" for="tran-subTitulo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="SubTitulo" class="form-control col-sm-8 col-md-6" id="tran-subTitulo" />
                        <span asp-validation-for="SubTitulo" class="text-danger" id="tran-subTitulo-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="TextoAntesDoVideo" for="tran-txtAntesVideo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <textarea type="text" asp-for="TextoAntesDoVideo" class="form-control col-sm-8 col-md-6" id="tran-txtAntesVideo"></textarea>
                        <span asp-validation-for="TextoAntesDoVideo" class="text-danger" id="tran-txtAntesVideo-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="CodigoDeIncorporacaoDeVideo" for="tran-codigo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="CodigoDeIncorporacaoDeVideo" class="form-control col-sm-8 col-md-6" id="tran-codigo" />
                        <span asp-validation-for="CodigoDeIncorporacaoDeVideo" class="text-danger" id="tran-codigo-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="TextoDepoisDoVideo" for="tran-txtDepoisVideo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <textarea type="text" asp-for="TextoDepoisDoVideo" class="form-control col-sm-8 col-md-6" id="tran-txtDepoisVideo"></textarea>
                        <span asp-validation-for="TextoDepoisDoVideo" class="text-danger" id="tran-txtDepoisVideo-danger"></span>
                    </div>
                </div>
                @*<div class="form-group row">
                        <div class="col-sm-3 col-form-label text-sm-right pr-0">
                            <label asp-for="TituloRodape" for="tran-titulo-rodape" class="mb-0">
                            </label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" asp-for="TituloRodape" class="form-control col-sm-8 col-md-6" id="tran-titulo-rodape" />
                            <span asp-validation-for="TituloRodape" class="text-danger" id="tran-titulo-rodape-danger"></span>
                        </div>
                    </div>*@
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="Rodape" for="tran-rodape" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Rodape" class="form-control col-sm-8 col-md-6" id="tran-rodape" />
                        <span asp-validation-for="Rodape" class="text-danger" id="tran-rodape-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="Ativo" for="tran-ativo" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-4">
                        <input type="checkbox" asp-for="Ativo" class="form-control col-sm-8 col-md-6" id="tran-ativo" />
                        <span asp-validation-for="Ativo" class="text-danger" id="tran-ativo-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                        <label asp-for="EmailLead" for="tran-lead" class="mb-0">
                        </label>
                    </div>
                    <div class="col-sm-4">
                        <input type="checkbox" asp-for="EmailLead" class="form-control col-sm-8 col-md-6" id="tran-lead" />
                        <span asp-validation-for="EmailLead" class="text-danger" id="tran-lead-danger"></span>
                    </div>
                </div>
                @if (Model.Depoimentos != null && Model.Depoimentos.Count > 0)
                {
                    <div class="form-group row">
                        <div class="col-12 col-lg-6 mt-4 mt-lg-0">
                            <div class="card ccard radius-t-0 h-100">
                                <div class="position-tl w-102 border-t-3 brc-primary-tp3 ml-n1px mt-n1px"></div>

                                <div class="card-header brc-secondary-l3 pb-3">
                                    <h5 class="card-title mb-2 mb-md-0 text-dark-m3">
                                        Depoimentos
                                        <span class="text-sm">
                                            (Escolha até 3 depoimentos)
                                        </span>
                                    </h5>
                                </div>
                                <div class="card-body bgc-white p-0 pb-15">
                                    @foreach (var item in Model.Depoimentos)
                                    {
                                        <div class="task-item d-flex align-items-center  bgc-h-green-l3 brc-secondary-l3 px-2">
                                            @Html.HiddenFor(ModelItem => item.Id)
                                            <label>
                                                @if (item.Selected)
                                                {
                                                    <input type="checkbox" value="@item.Id" onclick="adicionarRemoverId()" class="depoimento-check align-middle input-sm ml-2 mr-25" id="check-depoimento-id" checked="checked" />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" value="@item.Id" onclick="adicionarRemoverId()" class="depoimento-check align-middle input-sm ml-2 mr-25" id="check-depoimento-id" />
                                                }
                                            </label>

                                            <label class="flex-grow-1 mr-3 py-3" for="task-item-0">
                                                <span class="align-middle">
                                                    @Html.DisplayFor(ModelItem => item.Titulo)
                                                </span>
                                            </label>
                                            <label class="flex-grow-1 mr-3 py-3" for="task-item-0">
                                                <span class="align-middle">
                                                    @Html.DisplayFor(ModelItem => item.Nome)
                                                </span>
                                            </label>
                                            <label class="flex-grow-1 mr-3 py-3" for="task-item-0">
                                                <span class="align-middle">
                                                    @{
                                                        var qtdResto = 5 - item.QuantidadeEstrelas;
                                                    }

                                                    @for (var i = 0; i < item.QuantidadeEstrelas; i++)
                                                    {
                                                        <i class="fa fa-star text-orange"></i>
                                                    }

                                                    @if (qtdResto > 0)
                                                    {
                                                        for (var i = 0; i < qtdResto; i++)
                                                        {
                                                            <i class="fa fa-star text-grey-l3"></i>
                                                        }
                                                    }
                                                </span>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="mt-5 border-t-1 bgc-secondary-l4 brc-secondary-l2 py-35 mx-n25">
                    <div class="offset-md-3 col-md-9 text-nowrap">
                        <button class="btn btn-info btn-bold px-4" type="button" onclick="editTransmissao()">
                            <i class="fa fa-check mr-1"></i>
                            Atualizar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </di1v>
    <footer class="footer d-none d-sm-block">
        <div class="footer-inner bgc-white-tp1">
            <div class="pt-3 border-none border-t-3 brc-grey-l2 border-double">
                <span class="text-primary-m1 font-bolder text-120">Veda</span>
                <span class="text-grey">Application &copy; 2021</span>
                <span class="mx-3 action-buttons">
                    <a href="#" class="text-blue-m2 text-150"><i class="fab fa-twitter-square"></i></a>
                    <a href="#" class="text-blue-d2 text-150"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-orange-d1 text-150"><i class="fa fa-rss-square"></i></a>
                </span>
            </div>
        </div>
        <div class="footer-tools">
            <a href="#" class="btn-scroll-up btn btn-dark mb-2 mr-2">
                <i class="fa fa-angle-double-up mx-2px text-95"></i>
            </a>
        </div>
    </footer>
    <footer class="d-sm-none footer footer-sm footer-fixed">
        <div class="footer-inner">
            <div class="btn-group d-flex h-100 mx-2 border-x-1 border-t-2 brc-primary-m3 bgc-white-tp1 radius-t-1 shadow">
                <button class="btn btn-outline-primary btn-h-lighter-primary btn-a-lighter-primary border-0" data-toggle="modal" data-target="#id-ace-settings-modal">
                    <i class="fas fa-sliders-h text-blue-m1 text-120"></i>
                </button>
                <button class="btn btn-outline-primary btn-h-lighter-primary btn-a-lighter-primary border-0">
                    <i class="fa fa-plus-circle text-green-m1 text-120"></i>
                </button>
                <button class="btn btn-outline-primary btn-h-lighter-primary btn-a-lighter-primary border-0" data-toggle="collapse" data-target="#navbarSearch" aria-controls="navbarSearch" aria-expanded="false" aria-label="Toggle navbar search">
                    <i class="fa fa-search text-orange text-120"></i>
                </button>
                <button class="btn btn-outline-primary btn-h-lighter-primary btn-a-lighter-primary border-0 mr-0">
                    <span class="pos-rel">
                        <i class="fa fa-bell text-purple-m1 text-120"></i>
                        <span class="badge badge-dot bgc-red position-tr mt-n1 mr-n2px"></span>
                    </span>
                </button>
            </div>
        </div>
    </footer>
    <script src="~/lib/ace-v3.1.1/node_modules/autosize/dist/autosize.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/bootstrap-maxlength/dist/bootstrap-maxlength.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/inputmask/dist/jquery.inputmask.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/nouislider/distribute/nouislider.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/ion-rangeslider/js/ion.rangeSlider.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/tiny-date-picker/dist/date-range-picker.js"></script>
    <script src="~/lib/ace-v3.1.1/node_modules/moment/moment.js"></script>
